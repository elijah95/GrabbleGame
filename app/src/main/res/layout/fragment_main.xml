<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.elijah.game.grabblegame.MainActivityFragment"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:id="@+id/Grabble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:maxHeight="500dp"
        android:maxWidth="500dp"
        android:src="@drawable/grabble" />


    <ImageButton
        android:id="@+id/newGame"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/settings"
        android:layout_below="@+id/Grabble"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:scaleType="fitXY"
        android:src="@drawable/newgame"
        />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/newGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/settings" />


</RelativeLayout>
